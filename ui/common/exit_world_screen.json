{
  "namespace": "exit_world",

  // Information Text //

  "info_text_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to":  "top_left",
    "size": [ "100% - 2px", "100% - 2px" ],
    "offset": [ 2, 2 ],
    "controls": [
      {
        "info_text": {
          "type": "label",
          "text": "deathScreen.quit.secondaryClient.confirmLeaveWarning",
          "anchor_from": "top_left",
          "anchor_to":  "top_left",
          "color": "$body_text_color",
          "layer": 2,
          "size": [ "100%", "default" ]
        }
      }
    ]
  },

  // Buttons Panel //

  "two_button_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "cancel_button@common_buttons.light_text_button": {
          "$pressed_button_name": "button.menu_continue",
          "$button_text": "gui.cancel",
          "$button_offset": [ 0, 0 ],
          "size": [ "50%", "100%" ]
        }
      },
      {
        "accept_button@common_buttons.light_text_button": {
          "$pressed_button_name": "button.menu_quit",
          "$button_text": "gui.accept",
          "size": [ "50%", "100%" ]
        }
      }
    ]
  },

  // Screen Base //

  "exit_world_confirm_screen": {
    "type": "screen",
    "layer": 99,
    "size": [ "100%", "100%" ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "quit_world_screen",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "main@common_dialogs.main_panel_one_button": {
          "$show_close_button": false,
          "$text_name": "pauseScreen.header",
          "$child_control": "exit_world.info_text_panel",
          "$button_panel": "exit_world.two_button_panel",
          "size": [ 216, 108 ]
        }
      }
    ]
  }
}