{
  "namespace": "common_assets",

  //////////////////////////////
  // -- Inventory Common --  //
  /////////////////////////////

  // Images //

  "store_top_bar": {
    "type": "image",
    "texture": "textures/ui/StoreTopBar",
    "size": [ "100%", 24 ]
  },

  "store_top_bar_filler": {
    "type": "image",
    "texture": "textures/ui/StoreTopBarFiller"
  },

  "crafting_image": {
    "type": "custom",
    "renderer": "inventory_item_renderer",
    "layer": 2,
    "size": [ 16, 16 ],
    "property_bag": {
      "#item_id_aux": "3801088"
    }
  },

  "drop_one_icon": {
    "type": "image",
    "texture": "textures/ui/drop_icon",
    "layer": 2,
    "size": [ 16, 16 ]
  },

  "drop_all_icon": {
    "type": "image",
    "texture": "textures/ui/drop_all_icon",
    "layer": 2,
    "size": [ 16, 16 ]
  },

  // Buttons //

  "quick_craft_button@common_buttons.border_content_button": {
    "$button_content": "common_assets.crafting_image",
    "size": [ 24, 24 ],
    "property_bag": {
      "#collection_name": "crafting_output_items",
      "#collection_index": 0
    },
    "button_mappings": [
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.crafting_output_tertiary",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.crafting_output_tertiary",
        "mapping_type": "pressed"
      }
    ]
  },

  "drop_one_item_button@common_buttons.border_content_button": {
    "sound_name": "random.pop",
    "sound_pitch": 0.66,
    "sound_volume": 1.0,
    "$pressed_button_name": "button.cursor_drop_one",
    "$button_content": "common_assets.drop_one_icon",
    "size": [ 24, 24 ]
  },

  "drop_all_item_button@common_buttons.border_content_button": {
    "sound_name": "random.pop",
    "sound_pitch": 0.66,
    "sound_volume": 1.0,
    "$pressed_button_name": "button.cursor_drop_all",
    "$button_content": "common_assets.drop_all_icon",
    "size": [ 24, 24 ]
  },

  "destroy_one_item_button@common_buttons.border_text_button": {
    "sound_name": "mob.zombie.woodbreak",
    "sound_pitch": 0.66,
    "sound_volume": 1.0,
    "$pressed_button_name": "button.clear_hotbar_or_remove_one",
    "$button_text": "[x1]",
    "size": [ 24, 24 ],
    "bindings": [
      {
        "binding_type": "global",
        "binding_name": "#is_creative_mode",
        "binding_name_override": "#visible"
      }
    ]
  },

  "destroy_all_item_button@common_buttons.border_text_button": {
    "sound_name": "mob.zombie.woodbreak",
    "sound_pitch": 0.66,
    "sound_volume": 1.0,
    "$pressed_button_name": "button.destroy_selection",
    "$button_text": "[x64]",
    "size": [ 24, 24 ],
    "bindings": [
      {
        "binding_type": "global",
        "binding_name": "#is_creative_mode",
        "binding_name_override": "#visible"
      }
    ]
  },

  "auto_place_normal_button@auto_place.auto_place_button": {
    "$toggle_bindings": "inventory_normal",
    "$toggle_group_forced_index": 0,
    "$toggle_default_state": true
  },

  "auto_place_mode_button@auto_place.auto_place_button": {
    "$toggle_bindings": "inventory_auto_place_mode",
    "$toggle_group_forced_index": 1
  },

  "item_renderer_template": {
    "type": "panel",
    "controls": [
      {
        "background": {
          "type": "custom",
          "renderer": "inventory_item_renderer",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4,
          "size": "$icon_size",
          "property_bag": {
            "#item_id_aux": "$item_id_render"
          }
        }
      }
    ]
  },

  "clock_icon@common_buttons.border_content_button": {
    "$pressed_button_name": "button.any",
    "$button_content": "common_assets.item_renderer_template",
    "$item_id_render": 26083328,
    "$icon_size": [ "100% - 4px", "100% - 4px" ],
    "size": [ 24, 24 ]
  },

  "compass_icon@common_buttons.border_content_button": {
    "$pressed_button_name": "button.any",
    "$button_content": "common_assets.item_renderer_template",
    "$item_id_render": 25952256,
    "$icon_size": [ "100% - 2px", "100% - 2px" ],
    "size": [ 24, 24 ]
  },

  // Inventory Button Panel //

  "inventory_button_panel": {
    "type": "stack_panel",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "size": [ 24, "100%" ],
    "controls": [
      { "quick_craft@quick_craft_button": {} },
      { "clock_icon@clock_icon": {} },
      { "compass_icon@compass_icon": {} },
      { "drop_one_item@drop_one_item_button": {} },
      { "drop_all_item@drop_all_item_button": {} },
      { "destroy_one_item@destroy_one_item_button": {} },
      { "destroy_all_item@destroy_all_item_button": {} }
    ]
  },

  // Text Edit Box //

  "text_edit_box@common.text_edit_box": {
    "layer": 1
  },

  "new_back_button_image": {
    "type": "image",
    "texture": "$image_texture",
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 1,
    "size": "$image_texture_size"
  },

  "new_back_button@common.button": {
    "anchor_from": "center",
    "anchor_to": "center",
    "$pressed_button_name|default": "button.menu_exit",
    "size": "$button_panel_size",
    "offset": "$button_panel_offset",
    "$image_texture_size|default": [ 16, 16 ],
    "$button_panel_size|default": [ 24, 24 ],
    "$button_panel_offset|default": [ 0, 0 ],
    "$button_panel_type|default": "common_assets.new_back_button_image",
    "controls": [
      {
        "default@$button_panel_type": {
          "$image_texture": "textures/ui/back_button_default"
        }
      },
      {
        "hover@$button_panel_type": {
          "$image_texture": "textures/ui/back_button_hover"
        }
      },
      {
        "pressed@$button_panel_type": {
          "$image_texture": "textures/ui/back_button_pressed"
        }
      }
    ]
  },

  "exit_button": {
    "type": "panel",
    "anchor_from": "$exit_button_anchor",
    "anchor_to": "$exit_button_anchor",
    "size": "$exit_button_size",

    "$exit_button_image|default": "textures/ui/hud_tip_text_background",
    "$exit_button_name|default": "button.menu_exit",
    "$exit_button_anchor|default": "right_middle",
    "$exit_button_alpha|default": 0.5,
    "$exit_button_size|default": [ 16, 16 ],
    "$exit_button_offset|default": [ 0, 0 ],
    "$exit_button_icon_size|default": [ 14, 14 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "$exit_button_image",
          "alpha": "$exit_button_alpha",
          "layer": 1
        }
      },
      {
        "content_button@common.button": {
          "$pressed_button_name": "$exit_button_name",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": "$exit_button_icon_size",
          "controls": [
            {
              "default": {
                "type": "image",
                "texture": "textures/ui/close_button_default_light"
              }
            },
            {
              "hover": {
                "type": "image",
                "texture": "textures/ui/close_X_button_hover",
                "alpha": 0.6
              }
            },
            {
              "pressed": {
                "type": "image",
                "texture": "textures/ui/close_X_button",
                "alpha": 0.8
              }
            }
          ]
        }
      }
    ]
  },

  "back_button": {
    "type": "panel",
    "anchor_from": "$back_button_anchor",
    "anchor_to": "$back_button_anchor",
    "size": "$back_button_size",

    "$back_button_name|default": "button.menu_exit",
    "$back_button_anchor|default": "right_middle",
    "$back_button_size|default": [ 16, 16 ],
    "$back_button_offset|default": [ 0, 0 ],
    "$back_button_icon_size|default": [ 12, 12 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "alpha": 0.2,
          "layer": 1
        }
      },
      {
        "content_button@common.button": {
          "$pressed_button_name": "$back_button_name",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": "$back_button_icon_size",
          "controls": [
            {
              "default": {
                "type": "image",
                "texture": "textures/ui/arrow_left_white"
              }
            },
            {
              "hover": {
                "type": "image",
                "texture": "textures/ui/arrow_left_white",
                "alpha": 0.6
              }
            },
            {
              "pressed": {
                "type": "image",
                "texture": "textures/ui/arrow_left_white",
                "alpha": 0.8
              }
            }
          ]
        }
      }
    ]
  },

  "title_label": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "anchor_from": "center",
    "anchor_to": "center",
    "alpha": 0.2,
    "size": [ "fill", "100%" ],
    "controls": [
      {
        "text": {
          "type": "label",
          "text": "$topbar_title_text",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "shadow": true,
          "size": [ "default", 10 ],
          "bindings": "$topbar_title_bindings"
        }
      }
    ]
  },

  "topbar_panel": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [ "100%", "100%cm" ],

    "$topbar_title_text|default": "",
    "$topbar_title_bindings|default": "",
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": [ "100% - 4px", 16 ],
          "offset": [ 0, 0 ],
          "controls": [
            { "back_button@common_assets.back_button": {
              "$back_button_anchor": "left_middle"
            } },
            { "padding": {
              "type": "panel",
              "size": [ 2, 0 ]
            } },
            { "title_label@common_assets.title_label": {} }
          ]
        }
      }
    ]
  },

  "modal_background": {
    "type": "image",
    "texture": "textures/ui/ribbon_bar_text_background_hover",
    "layer": 1,
    "alpha": "$modal_background_alpha",
    "$modal_background_alpha|default": 0.2,
    "color": "$modal_background_color",
    "$modal_background_color|default": [ 1.0, 1.0, 0.333 ],
    "size": [ "100%", "100%" ]
  },

  "start_screen_background@common_assets.background_template": {
    "$background_texture": "textures/background/bg_4",
    "$background_alpha": 0.2
  },

  "background_template": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": "$background_layer",
    "size": [ "100%", "100%" ],
    "$background_layer|default": -12,
    "$background_texture|default": "textures/ui/bg_0",
    "$background_alpha|default": 0.4,
    "$background_visible_black|default": true,
    "$background_visible_texture|default": true,
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/Black",
          "ignored": "(not $background_visible_black)",
          "alpha": "$background_alpha",
          "layer": -27,
          "fill": true,
          "uv_size": [ "100%c", "100%" ]
        }
      },
      {
        "image": {
          "type": "image",
          "texture": "$background_texture",
          "ignored": "(not $background_visible_texture)",
          "layer": "$background_layer",
          "$background_layer": -29,
          "fill": true,
          "size": [ "100%", "100%" ],
          "uv_size": [ "100%c", "100%" ]
        }
      }
    ]
  },

  "background_screen_image": {
    "type": "image",

    "anchor_from": "center",
    "anchor_to": "center",

    "texture": "$background_screen_texture",
    "alpha": "$background_screen_alpha",
    "layer": "$background_screen_layer",
    "size": "$background_screen_size",

    "$background_screen_texture|default": "textures/ui/Black",
    "$background_screen_alpha|default": 0.7,
    "$background_screen_layer|default": 1,
    "$background_screen_size|default": [ "100%cm + 4px", "100%cm + 4px" ]
  }
}