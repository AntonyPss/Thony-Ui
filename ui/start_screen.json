{
  "namespace": "start",

  // Bottom Left Text Panel //

  "packname": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "alpha": 0.4,
    "size": [ "100%c + 8px", "100%c + 4px" ],
    "controls": [
      {
        "label": {
          "type": "label",
          "text": "Thony UI Pack v1",
          "text_alignment": "center",
          "font_type": "smooth",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": [ "default", 10 ],
          "offset": [ 0, 0 ]
        }
      }
    ]
  },

  "copyright": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "alpha": 0.4,
    "size": [ "100%c + 8px", "100%c + 4px" ],
    "controls": [
      {
        "label": {
          "type": "label",
          "text": "menu.copyright",
          "text_alignment": "center",
          "font_type": "smooth",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": [ "default", 10 ],
          "offset": [ 0, 0 ]
        }
      }
    ]
  },

  "version": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "alpha": 0.4,
    "size": [ "100%c + 8px", "100%c + 4px" ],
    "controls": [
      {
        "label": {
          "type": "label",
          "text": "#version",
          "text_alignment": "center",
          "font_type": "smooth",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": [ "default", 10 ],
          "bindings": [
            {
              "binding_name": "#version"
            }
          ]
        }
      }
    ]
  },

  "text_panel": {
    "size": [ "100% - 4px", "100%cm" ],
    "offset": [ 0, -2 ],
    "controls": [
      { "version@version": {} },
      { "packname@packname": {} },
      { "copyright@copyright": {} }
    ]
  },

  // Skin Viewer Panel //

  "skin_viewer_panel": {
    "type": "input_panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100%", "100%" ],
    "gesture_tracking_button": "button.turn_doll",
    "tts_ignore_count": true,
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.turn_doll",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ],
    "controls": [
      {
        "paper_doll_panel": {
          "type": "panel",
          "size": [ 62, 72 ],
          "offset": [ 0, "-14px" ],
          "controls": [
            {
              "paper_doll": {
                "type": "custom",
                "renderer": "paper_doll_renderer",
                "layer": 2,
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "rotation": "gesture_x",
                "size": [ "100%", "100%" ],
                "animation_reset_name": "screen_animation_reset",
                "anims": [
                  "@common.screen_exit_size_animation_push",
                  "@common.screen_exit_size_animation_pop",
                  "@common.screen_entrance_size_animation_push",
                  "@common.screen_entrance_size_animation_pop"
                ],
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "viewer_panel",
                    "source_property_name": "#gesture_delta_source",
                    "target_property_name": "#gesture_delta_source"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "viewer_panel",
                    "source_property_name": "#gesture_mouse_delta_x",
                    "target_property_name": "#gesture_mouse_delta_x"
                  },
                  {
                    "binding_name": "#is_appearance_visible",
                    "binding_name_override": "#visible",
                    "binding_condition": "always"
                  }
                ]
              }
            },
            {
              "appearacne_loading_panel@common_store.progress_loading": {
                "$hide_failure_text": true,
                "$hide_progress_loading_outline": true,
                "$source_control_name": "paper_doll",
                "$source_property_name": "(not #visible)"
              }
            }
          ]
        }
      }
    ]
  },

  // Main Center Buttons Panel //

  "main_text_button@common_buttons.dark_text_button": {
    "$border_visible": false,
    "$default_button_texture": "textures/ui/hud_tip_text_background",
    "$hover_button_texture": "textures/ui/hud_tip_text_background",
    "$pressed_button_texture": "textures/ui/hud_tip_text_background",

    "$font_type": "smooth",
    "$hover_text_color": [ 0.7, 0.7, 0.7 ],
    "$button_alpha": 0.3
  },

  "play@main_text_button": {
    "$pressed_button_name": "$play_button_target",
    "$button_text": "menu.play",
    "size": [ "100%", 24 ]
  },

  "settings@main_text_button": {
    "$pressed_button_name": "button.menu_settings",
    "$button_text": "menu.options",
    "size": [ "50%", 24 ]
  },

  "store@main_text_button": {
    "$pressed_button_name": "button.menu_store",
    "$button_text": "menu.store",
    "size": [ "50%", 24 ]
  },

  "achievements@main_text_button": {
    "$pressed_button_name": "button.menu_achievements",
    "$button_text": "menu.achievements",
    "size": [ "50%", 24 ]
  },

  "skins@main_text_button": {
    "$pressed_button_name": "button.menu_skins",
    "$button_text": "menu.skins",
    "size": [ "50%", 24 ]
  },

  "exit@main_text_button": {
    "$pressed_button_name": "button.menu_exit",
    "$button_text": "gui.exit",
    "size": [ "100%", 24 ]
  },

  "horizontal_panel_0": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", 24 ],
    "controls": [
      { "settings@settings": {} },
      { "store@store": {} }
    ]
  },

  "horizontal_panel_1": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", 24 ],
    "controls": [
      { "achievements@achievements": {} },
      { "skins@skins": {} }
    ]
  },

  "main_stack_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 164, "100%c" ],
    "controls": [
      { "0@play": {} },
      { "1@horizontal_panel_0": {} },
      { "3@horizontal_panel_1": {} },
      { "4@exit": {} }
    ]
  },

  "main_stack_bg": {
    "type": "image",
    "texture": "textures/ui/Black",
    "anchor_from": "center",
    "anchor_to": "center",
    "alpha": 0.4,
    "size": [ "100%c + 8px", "100%c + 4px" ],
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "layer": 2,
          "size": [ "100%c", 96 ],
          "controls": [
            {
              "skin_viewer@skin_viewer_panel": {
                "size": [ 64, "100%" ]
              }
            },
            {
              "main_stack@main_stack_panel": {
                "size": [ 164, "100%" ]
              }
            }
          ]
        }
      }
    ]
  },

  // Welcome Gamertag Panel //

  "welcome_gamertag_panel": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 1,
    "alpha": 0.4,
    "size": [ "100%cm + 8px", 24 ],
    "offset": [ 0, 68 ],
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "100%c", 24 ],
          "controls": [
            {
              "welcome_text": {
                "type": "label",
                "text": "menu.welcome.title",
                "text_alignment": "center",
                "layer": 3,
                "color": "$main_header_text_color",
                "shadow": true,
                "size": [ "default", 10 ]
              }
            },
            {
              "gamertag_text": {
                "type": "label",
                "text": "#text",
                "text_alignment": "center",
                "layer": 3,
                "color": [ 0.8, 0.8, 0.8 ],
                "shadow": true,
                "size": [ "default", 10 ],
                "bindings": [
                  {
                    "binding_name": "#playername",
                    "binding_name_override": "#text"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  // Title Image //

  "title_panel": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [ 256, 72  ],
    "offset": [ 0, "2%" ],
    "controls": [
      {
        "title_image": {
          "type": "image",
          "texture": "textures/ui/title",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4
        }
      }
    ]
  },

  // Screen Content //

  "start_screen_content": {
    "controls": [
      { "text_panel@text_panel": {} },
      { "main_stack@main_stack_bg": {} },
      { "hello@welcome_gamertag_panel": {} },
      { "title_panel@title_panel": {} }
    ]
  },

  "start_screen": {
    "$screen_bg_content": "start.bg"
  },

  "bg@common.button": {
    "$pressed_button_name": "button.menu_settings",
    "fill": true
  }
}