{
  "namespace": "win10_trial_conversion",

  //---------------------------------------------------------------------------
  // Padding
  //---------------------------------------------------------------------------

  "padding_horizontal_4": {
    "type": "panel",
    "size": [ 4, 0 ]
  },

  "padding_horizontal_8": {
    "type": "panel",
    "size": [ 8, 0  ]
  },

  "padding_vertical_4": {
    "type": "panel",
    "size": [ 0, 4 ]
  },

  "padding_vertical_8": {
    "type": "panel",
    "size": [ 0, 8 ]
  },

  //---------------------------------------------------------------------------
  // Label Section
  //---------------------------------------------------------------------------

  "pack_name_panel": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "pack_text": {
          "type": "label",
          "text": "menu.pack.name",
          "text_alignment": "left",
          "font_type": "smooth",
          "font_scale_factor": 1.4,
          "layer": 2,
          "shadow": true,
          "color": "$main_title_text_color",
          "size": [ "default", 28 ]
        }
      }
    ]
  },

  "pack_info_panel": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "pack_text": {
          "type": "label",
          "text": "menu.pack.info",
          "text_alignment": "left",
          "font_type": "smooth",
          "layer": 2,
          "color": "$main_subtitle_text_color",
          "size": [ "100%", 12 ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Image Section
  //---------------------------------------------------------------------------

  "pack_icon_panel": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "pack_image": {
          "type": "image",
          "texture": "pack_icon.png",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4,
          "size": [ 48, 48 ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Top Section
  //---------------------------------------------------------------------------

  "header_stack": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [ "100%", "100%c" ],
    "offset": [ 0, 4 ],
    "controls": [
      { "pack_icon@pack_icon_panel": {} },
      { "p@padding_horizontal_4": {} },
      { "vertical": {
          "type": "stack_panel",
          "size": [ "100%c", "100%cm" ],
          "controls": [
            { "pack_name@pack_name_panel": {} },
            { "pack_info@pack_info_panel": {} }
          ]
      } }
    ]
  },

  //---------------------------------------------------------------------------
  // Middle Section
  //---------------------------------------------------------------------------

  "title_label": {
    "type": "panel",
    "size": [ "100%", "100%c + 2px" ],
    "controls": [
      {
        "title_text": {
          "type": "label",
          "text": "$title_text",
          "font_type": "smooth",
          "font_scale_factor": 1.08,
          "layer": 4,
          "shadow": true,
          "color": "$main_title_text_color",
          "size": [ "100%", 16 ]
        }
      }
    ]
  },

  "subtitle_label": {
    "type": "panel",
    "size": [ "100%", "100%c + 2px" ],
    "controls": [
      {
        "subtitle_text": {
          "type": "label",
          "text": "$subtitle_text",
          "font_type": "smooth",
          "layer": 4,
          "color": "$subtitle_text_color",
          "size": [ "100%", "default" ]
        }
      }
    ]
  },

  "middle_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      { "introdution_title@title_label": {
          "$title_text": "pack.introdutionTitle"
      } },
      { "introdution_subtitle@subtitle_label": {
          "$subtitle_text": "pack.introdutionSubtitle.0"
      } }
    ]
  },

  //---------------------------------------------------------------------------
  // Bottom Setion
  //---------------------------------------------------------------------------

  "button_0@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.any",
    "$button_text": "none",
    "size": [ "50%", 24 ]
  },

  "button_1@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.any",
    "$button_text": "none",
    "size": [ "50%", 24 ]
  },

  "bottom_stack": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "100%c" ],
    "controls": [
      { "0@button_0": {} },
      { "1@button_1": {} }
    ]
  },

  //---------------------------------------------------------------------------
  // Dialog Buttons
  //---------------------------------------------------------------------------

  "close_button@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.menu_exit",
    "$button_text": "gui.back",
    "size": [ "50%", "100%" ]
  },

  "music_button@common_toggles.dark_text_toggle": {
    "$toggle_view_binding_name": "toggle_music",
    "$toggle_name": "music_toggle_panel",
    "$radio_toggle_group": true,
    "$button_text": "None",
    "size": [ "50%", "100%" ]
  },

  "win10_trial_conversion_buttons": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", 20 ],
    "controls": [
      { "close_button@close_button": {} },
      { "music_button@music_button": {} }
    ]
  },
  
  //---------------------------------------------------------------------------
  // Screen
  //---------------------------------------------------------------------------

  "win10_trial_conversion_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      { "header_panel@header_stack": {} },
      { "p0@padding_vertical_8": {} },
      { "middle_panel@middle_panel": {} },
      { "p1@padding_vertical_8": {} },
      { "bottom_panel@bottom_stack": {} }
    ]
  },

  "win10_trial_conversion_scrolling@common.scrolling_panel": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "$scrolling_content": "win10_trial_conversion.win10_trial_conversion_panel",
    "$scrolling_pane_size": [ "100%", "100% - 4px" ],
    "$scrolling_pane_offset": [ 0, 2 ],
    "$scroll_size": [ 4, "100% - 4px" ],
    "$show_background": false,
    "size": [ "100% - 12px", "100% - 48px" ]
  },

  "win10_trial_conversion_main_panel": {
    "size": [ "100%", "100%" ],
    "controls": [
      { "win10_trial_conversion_scrolling@win10_trial_conversion_scrolling": {} },
      { "padding@padding_vertical_4": {
          "size": [ 0, "fill" ]
      } },
      { "win10_trial_conversion_buttons@win10_trial_conversion_buttons": {} }
    ]
  },

  "win10_trial_conversion_screen": {
    "$screen_content": "win10_trial_conversion.win10_trial_conversion_main_panel",
    "$screen_bg_content": "common.screen_background",
    "$screen_background_alpha": 0.6
    // "$additional_screen_content": "section-music"
  } 
}