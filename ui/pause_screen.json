{
  "namespace": "pause",

  //---------------------------------------------------------------------------
  // World Name Section
  //---------------------------------------------------------------------------

  "world_name_anim_bg_offset": {
    "anim_type": "offset",
    "easing": "in_quart",
    "duration": 0.5,
    "from": [ "-24%", 2 ],
    "to": [ 2, 2 ]
  },

  "world_name_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%cm", 24 ],
    "anims": [
      "@pause.world_name_anim_bg_offset"
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "quit_world_screen",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "alpha": 0.7,
          "size": [ "100%cm + 8px", 24 ],
          "controls": [
            {
              "stack_panel": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ "100%cm - 2px", "100% - 4px" ],
                "controls": [
                  {
                    "world_icon": {
                      "type": "panel",
                      "size": [ "100%c", "100%" ],
                      "controls": [
                        {
                          "icon@pause.world_icon_image": {
                            "anchor_from": "center",
                            "anchor_to": "center"
                          }
                        }
                      ]
                    }
                  },
                  {
                    "padding": {
                      "type": "panel",
                      "size": [ 4, 0 ]
                    }
                  },
                  {
                    "vertical": {
                      "type": "panel",
                      "size": [ "100%cm - 4px", "100%" ],
                      "controls": [
                        {
                          "stack_panel": {
                            "type": "stack_panel",
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "size": [ "100%c", 24 ],
                            "controls": [
                              {
                                "playing_label": {
                                  "type": "label",
                                  "text": "action.interact.name",
                                  "anchor_from": "top_left",
                                  "anchor_to": "top_left",
                                  "font_type": "MinecraftTen",
                                  "layer": 4,
                                  "shadow": true,
                                  "ignored": "$is_on_3p_server",
                                  "size": [ "default", 12 ]
                                }
                              },
                              {
                                "server_name_label": {
                                  "type": "label",
                                  "text": "menu.serverGenericName",
                                  "anchor_from": "top_left",
                                  "anchor_to": "top_left",
                                  "font_type": "MinecraftTen",
                                  "layer": 4,
                                  "shadow": true,
                                  "ignored": "(not $is_on_3p_server)",
                                  "size": [ "default", 12 ]
                                }
                              },
                              {
                                "world_name_panel": {
                                  "type": "panel",
                                  "size": [ "100%c", 10 ],
                                  "controls": [
                                    {
                                      "world_name_label": {
                                        "type": "label",
                                        "text": "#text",
                                        "layer": 4,
                                        "localize": false,
                                        "shadow": true,
                                        "size": [ "default", 10 ],
                                        "bindings": [
                                          {
                                            "binding_name": "#worldname",
                                            "binding_name_override": "#text"
                                          }
                                        ]
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "world_icon_image_template": {
    "type": "image",
    "texture": "$world_icon_texture",
    "layer": 4,
    "bindings": [
      {
        "binding_name": "#worldname"
      },
      {
        "binding_type": "view",
        "source_property_name": "$world_server_name",
        "target_property_name": "#visible"
      }
    ]
  },

  "world_icon_image": {
    "type": "panel",
    "size": [ 16, 16 ],
    "controls": [
      {
        "default@pause.world_icon_image_template": {
          "$world_icon_texture|default": "textures/ui/world_glyph_color_2x",
          "ignored": "$is_on_3p_server",
          "bindings": []
        }
      },
      {
        "cubecraft@pause.world_icon_image_template": {
          "$world_icon_texture": "textures/server_icon/cubecraft_games",
          "$world_server_name": "(#worldname = 'CubeCraft Games')",
          "ignored": "(not $is_on_3p_server)"
        }
      },
      {
        "galaxite@pause.world_icon_image_template": {
          "$world_icon_texture": "textures/server_icon/galaxite",
          "$world_server_name": "(#worldname = 'Galaxite')",
          "ignored": "(not $is_on_3p_server)"
        }
      },
      {
        "hive_games@pause.world_icon_image_template": {
          "$world_icon_texture": "textures/server_icon/hive_games",
          "$world_server_name": "(#worldname = 'Hive Games')",
          "ignored": "(not $is_on_3p_server)"
        }
      },
      {
        "lifeboat@pause.world_icon_image_template": {
          "$world_icon_texture": "textures/server_icon/lifeboat",
          "$world_server_name": "(#worldname = 'Lifeboard Network')",
          "ignored": "(not $is_on_3p_server)"
        }
      },
      {
        "mineville@pause.world_icon_image_template": {
          "$world_icon_texture": "textures/server_icon/mineville",
          "$world_server_name": "(#worldname = 'Mineville City')",
          "ignored": "(not $is_on_3p_server)"
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Player List Section
  //---------------------------------------------------------------------------

  "player_lists": {
    "size": [ "100%", "100%" ]
  },

  "scrolling_panel@common.scrolling_panel": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$scrolling_content": "pause.player_lists",
    "$show_background": false,
    "$scrolling_pane_size": [ "100%", "100%" ],
    "$scroll_size": [ 4, "100% - 4px" ],
    "size": [ "100%", "100%" ]
  },

  "player_list_invite_button@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.menu_invite_players",
    "$button_text": "pauseScreen.invite",
    "focus_change_down": "FOCUS_OVERRIDE_STOP",
    "$focus_override_right": "FOCUS_OVERRIDE_STOP",
    "size": [ "100%", 24 ],
    "bindings": [
      {
        "binding_name": "#invite_button_visible",
        "binding_name_override": "#visible",
        "binding_type": "global"
      },
      {
        "binding_name": "#invite_button_enabled",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "main_panel_one_button": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "alpha": 0.4,
          "layer": 2
        }
      },
      {
        "stack_panel": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "100% - 4px", "100% - 4px" ],
          "controls": [
            {
              "title_label": {
                "type": "panel",
                "size": [ "100%", 16 ],
                "controls": [
                  {
                    "text": {
                      "type": "label",
                      "text": "$text_name",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "shadow": true,
                      "layer": 4,
                      "color": "$main_header_text_color",
                      "size": [ "default", 10 ]
                    }
                  }
                ]
              }
            },
            {
              "panel_indent": {
                "type": "panel",
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ "100% - 4px", "fill" ],
                "controls": [
                  { "inside_header_panel@$child_control": {} }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "player_list_screen_panel": {
    "type": "panel",
    "layer": 99,
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "main@pause.main_panel_one_button": {
          "$text_name": "key.playerlist",
          "$child_control": "pause.player_list_scrolling_panel",
          "size": [ "100% - 4px", "100% - 4px" ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Small Buttons Section
  //---------------------------------------------------------------------------

  "small_dark_button@common_buttons.dark_content_button": {
    "layer": 2,
    "size": [ 24, 24 ]
  },

  "screenshot@pause.small_dark_button": {
    "$pressed_button_name": "button.screenshot",
    "$button_content": "pause.take_screenshot_icon",
    "$button_tts_header": "key.screenshot",
    "sound_name": "random.screenshot"
  },

  "feedback@pause.small_dark_button": {
    "$pressed_button_name": "button.feedback",
    "$button_content": "pause.feedback_icon",
    "$button_tts_header": "accessibility.start.feedback"
  },

  "achievements@pause.small_dark_button": {
    "$pressed_button_name": "button.menu_achievements",
    "$button_content": "pause.achievements_icon",
    "$button_tts_header": "menu.achievements"
  },

  "lower_padding": {
    "type": "panel",
    "size": [ 2, 0 ]
  },

  "lower_buttons_stack": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "size": [ "100%c", 24 ],
    "offset": [ 2, -2 ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "quit_world_screen",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      { "feedback@feedback": {} },
      { "pad0@lower_padding": {} },
      { "achievements@achievements": {} },
      { "pad1@lower_padding": {} },
      { "screenshot@screenshot": {} }
    ]
  },

  //---------------------------------------------------------------------------
  // Main Stack Section
  //---------------------------------------------------------------------------

  "continue@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.menu_continue",
    "$button_text": "menu.returnToGame",
    "size": [ "100%", 24 ]
  },

  "settings@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.menu_settings",
    "$button_text": "menu.options",
    "size": [ "100%", 24 ]
  },

  "profile@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.to_profile_or_skins_screen",
    "$button_text": "menu.skins",
    "size": [ "100%", 24 ]
  },

  "realms_stories@common_buttons.dark_text_button": {
    "$hover_button_texture": "textures/ui/realmsContentHover",
    "$pressed_button_texture": "textures/ui/realmsContentPressed",
    "$pressed_button_name": "butotn.menu_feed",
    "$button_text": "pauseScreen.realmsStories",
    "size": [ "100%", 24 ],
    "bindings": [
      {
        "binding_name": "#in_realm_with_stories",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "quit_toggle@exit_world.toggle_common_panel": {
    "$toggle_view_binding_name": "quit_world_screen",
    "$toggle_group_forced_index": 1,
    "$button_text": "menu.quit",
    "size": [ "100%", 24 ]
  },

  "main_stack_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 186, "100%c" ],
    "controls": [
      { "continue@continue": {} },
      { "settings@settings": {} },
      { "profile@profile": {} },
      { "realms@realms_stories": {} },
      { "quit_toggle@quit_toggle": {} }
    ]
  },

  "main_screen_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "100%" ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "quit_world_screen",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "main_buttons": {
          "type": "panel",
          "size": [ "fill", "100%" ],
          "controls": [
            {
              "content@pause.main_stack_panel": {}
            }
          ]
        }
      },
      {
        "player_list_panel": {
          "type": "panel",
          "size": [ 124, "100%" ],
          "controls": [
            {
              "player_list@pause.player_list_screen_panel": {}
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Screen
  //---------------------------------------------------------------------------

  "pause_screen_content": {
    "controls": [
      { "main_buttons@pause.main_screen_panel": {} },
      { "lower_buttons@lower_buttons_stack": {} },
      { "world_name_stack@pause.world_name_panel": {} },
      { "exit_confirm@exit_world.exit_world_confirm_screen": {} },
      { "exit_background@exit_world.background_screen": {} }
    ]
  },

  "pause_screen": {
    "$screen_background_alpha": 0.2
  }
}