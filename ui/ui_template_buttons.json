{
  "namespace": "common_buttons",

  // Border Button Template //

  "border_image_texture": {
    "type": "image",
    "texture": "textures/ui/button_texture",
    "layer": 1,
    "alpha": "$button_alpha",
    "$button_alpha|default": 0.5,
    "size": "$button_image_size"
  },

  "border_label_panel": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100% - 4px", "100% - 4px" ],
    "controls": [
      {
        "text": {
          "type": "label",
          "text": "$button_text",
          "text_alignment": "center",
          "font_type": "$button_text_font",
          "font_scale_factor": "$button_text_size",
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "$button_text_color",
          "shadow": "$button_text_shadow",
          "max_size": [ "100%", 10 ]
        }
      }
    ]
  },

  "border_content_panel": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100% - 4px", "100% - 4px" ],
    "controls": [
      {
        "icon": {
          "type": "panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": "$button_content_size",
          "controls": [
            {
              "image@$button_content": {
                "layer": 4,
                "alpha": "$button_content_alpha"
              }
            }
          ]
        }
      }
    ]
  },

  // Text Button Template //

  "border_text_button@common.button": {
    "anchor_from": "center",
    "anchor_to": "center",

    "$button_text|default": "",
    "$button_text_shadow|default": true,
    "$button_text_font|default": "normal",
    "$button_text_size|default": 1.0,

    "$pressed_button_name|default": "button.any",

    "$button_image_size|default": [ "100% - 2px", "100% - 2px" ],
    "$button_panel_label|default": "common_buttons.border_label_panel",
    "$button_panel_image|default": "common_buttons.border_image_texture",
    "controls": [
      {
        "default@$button_panel_image": {
          "layer": 2,
          "$button_alpha": 0.6,
          "controls": [
            {
              "text@$button_panel_label": {
                "$button_text_color": "$border_default_text_button_color"
              }
            }
          ]
        }
      },
      {
        "hover@$button_panel_image": {
          "layer": 2,
          "$button_alpha": 0.7,
          "controls": [
            {
              "text@$button_panel_label": {
                "$button_text_color": "$border_hover_text_button_color"
              }
            }
          ]
        }
      },
      {
        "pressed@$button_panel_image": {
          "layer": 2,
          "$button_alpha": 0.6,
          "controls": [
            {
              "text@$button_panel_label": {
                "$button_text_color": "$border_pressed_text_button_color",
                "offset": [ 0, 1 ]
              }
            }
          ]
        }
      }
    ]
  },

  "border_content_button@common.button": {
    "anchor_from": "center",
    "anchor_to": "center",

    "$button_content|default": "common.empty_panel",
    "$button_content_alpha|default": 1.0,
    "$button_content_size|default": [ "100%", "100%" ],

    "$pressed_button_name|default": "button.any",

    "$button_image_size|default": [ "100% - 2px", "100% - 2px" ],
    "$button_panel_content|default": "common_buttons.border_content_panel",
    "$button_panel_image|default": "common_buttons.border_image_texture",
    "controls": [
      {
        "default@$button_panel_image": {
          "layer": 2,
          "$button_alpha": 0.6,
          "controls": [
            {
              "text@$button_panel_content": {
                "$button_content_alpha": 0.8
              }
            }
          ]
        }
      },
      {
        "hover@$button_panel_image": {
          "layer": 2,
          "$button_alpha": 0.7,
          "controls": [
            {
              "text@$button_panel_content": {
                "$button_content_alpha": 0.7
              }
            }
          ]
        }
      },
      {
        "pressed@$button_panel_image": {
          "layer": 2,
          "$button_alpha": 0.6,
          "controls": [
            {
              "text@$button_panel_content": {
                "$button_content_alpha": 0.6,
                "offset": [ 0, 1 ]
              }
            }
          ]
        }
      }
    ]
  }
}