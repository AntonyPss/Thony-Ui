{
  "namespace": "mob_effect",

  "effect_icon_panel": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 28, 28 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/Black",
          "anchor_from": "center",
          "anchor_to": "center",
          "alpha": 0.4,
          "size": [ "100% - 4px", "100% - 4px" ]
        }
      },
      {
        "icon": {
          "type": "image",
          "texture": "#texture",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4,
          "size": [ "100% - 8px", "100% - 8px" ],
          "bindings": [
            {
              "binding_type": "collection",
              "binding_name": "#texture",
              "binding_collection_name": "mob_effects_collection",
              "binding_condition": "visible"
            }
          ]
        }
      }
    ]
  },

  "effect_name": {
    "shadow": true,
    "size": [ "default", 10 ]
  },

  "effect_timer": {
    "shadow": true,
    "alpha": 0.8,
    "size": [ "default", 10 ]
  },

  "mob_effect_grid_item": {
    "size": [ "100%", 32 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/Black",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 1,
          "alpha": 0.4,
          "size": [ "100% - 2px", "100% - 2px" ]
        }
      },
      {
        "stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4,
          "size": [ "100% - 4px", "100% - 4px" ],
          "controls": [
            { "icon@effect_icon_panel": {} },
            {
              "background": {
                "type": "panel",
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 1,
                "size": [ "fill", "100%" ],
                "controls": [
                  {
                    "bg": {
                      "type": "image",
                      "texture": "textures/ui/Black",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "layer": 1,
                      "alpha": 0.4,
                      "size": [ "100% - 4px", "100% - 4px" ]
                    }
                  },
                  {
                    "stack_panel": {
                      "type": "panel",
                      "layer": 4,
                      "size": [ "100%", "100%" ],
                      "offset": [ 6, 4 ],
                      "controls": [
                        {
                          "stack_panel": {
                            "type": "stack_panel",
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "size": [ "100%cm", "100%" ],
                            "controls": [
                              { "name@effect_name": {} },
                              { "timer@effect_timer": {} }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "mob_effect_grid": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "default" ],
    "offset": [ 0, 0 ]
  },

  "scrolling_panel@common.scrolling_panel": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$scrolling_content": "mob_effect.mob_effect_grid_panel",
    "$show_background": false,
    "$scrolling_pane_size": [ "100% - 2px", "100% - 2px" ],
    "$scroll_size": [ 4, "100% - 8px" ],
    "size": [ "100%", "100%" ],
    "offset": [ 1, 1 ]
  },


  "main_screen@common_dialogs.main_panel_no_button": {
    "$text_name": "key.mobEffects",
    "$child_control": "mob_effect.scrolling_panel",
    "$fill_alpha": 0.6,
    "size": "$screen_size",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$screen_size": [ 204, 132 ]
      },
      {
        "requires": "$pocket_screen",
        "$screen_size": [ 212, 148 ]
      }
    ]
  }
}