{
  "namespace": "mob_effect",

  "title_label": {
    "type": "image",
    "texture": "textures/ui/hud_tip_text_background",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "alpha": 0.2,
    "size": [ "100%c + 8px", "100%c + 4px" ],
    "controls": [
      {
        "text": {
          "type": "label",
          "text": "key.mobEffects",
          "text_alignment": "center",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "shadow": true,
          "size": [ "default", 10 ]
        }
      }
    ]
  },

  "header_stack_panel": {
    "type": "panel",
    "size": [ "100%", 16 ],
    "controls": [
      { "title@title_label": {} },
      { "exit@common_assets.exit_button": {} }
    ]
  },

  "effect_icon_panel": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 24, 24 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "anchor_from": "center",
          "anchor_to": "center",
          "alpha": 0.4,
          "size": [ "100% - 4px", "100% - 4px" ]
        }
      },
      {
        "icon": {
          "type": "image",
          "texture": "#texture",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4,
          "size": [ "100% - 8px", "100% - 8px" ],
          "bindings": [
            {
              "binding_type": "collection",
              "binding_name": "#texture",
              "binding_collection_name": "mob_effects_collection",
              "binding_condition": "visible"
            }
          ]
        }
      }
    ]
  },

  "effect_name": {
    "shadow": true,
    "size": [ "default", 12 ]
  },

  "effect_timer": {
    "shadow": true,
    "alpha": 0.8,
    "size": [ "default", 14 ]
  },

  "mob_effect_grid_item": {
    "size": [ "100%", 28 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 1,
          "alpha": 0.4,
          "size": [ "100% - 2px", "100% - 2px" ]
        }
      },
      {
        "stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 4,
          "size": [ "100% - 4px", "100% - 4px" ],
          "controls": [
            { "icon@effect_icon_panel": {} },
            { "padding": {
              "type": "panel",
              "size": [ 4, 0 ]
            } },
            { "stack_panel": {
              "type": "stack_panel",
              "size": [ "100%c", "100%" ],
              "offset": [ 0, 1 ],
              "controls": [
                { "p": {
                  "type": "panel",
                  "size": [ 0, 1 ]
                } },
                { "name@effect_name": {} },
                { "timer@effect_timer": {} }
              ]
            } }
          ]
        }
      }
    ]
  },

  "mob_effect_grid": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "default" ],
    "offset": [ 0, 0]
  },

  "main_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100%", "100%" ],
    "controls": [
      { "header@mob_effect.header_stack_panel": {} },
      { "padding0": {
        "type": "panel",
        "size": [ 0, 2 ]
      } },
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "alpha": 0.2,
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "scroll_panel": {
                "type": "panel",
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 3,
                "size": [ "100% - 4px", "100% - 4px" ],
                "clips_children": true,
                "controls": [
                  {
                    "scrolling_panel@common.scrolling_panel": {
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "$scrolling_content": "mob_effect.mob_effect_grid_panel",
                      "$show_background": false,
                      "$scrolling_pane_size": [ "100% - 2px", "100% - 2px" ],
                      "$scroll_size": [ 4, "100% - 8px" ],
                      "size": [ "100%", "100%" ],
                      "offset": [ 1, 1 ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "main_screen": {
    "size": [ 208, 124 ],
    "controls": [
      { "main@mob_effect.main_panel": {} }
    ]
  }
}