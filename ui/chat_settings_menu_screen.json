{
  "namespace": "chat_settings",

  // Toggle Panel With Description Label //


  "toggle_mute_all_chat@settings_common.option_toggle": {
    "$one_line_layout": true,
    "$has_option_description": true,
    "$option_label": "chat.settings.muteAll",
    "$option_description": "chat.settings.muteAll.description",
    "$option_binding_name": "#hide_chat",
    "$toggle_name": "hide_chat",
    "$focus_id": "mute_all_toggle_focus_id",
    "$focus_override_up": "reset_button_focus_id"
  },

  "toggle_mute_emote_chat@settings_common.option_toggle": {
    "$one_line_layout": true,
    "$has_option_description": true,
    "$option_label": "chat.settings.muteEmotes",
    "$option_description": "chat.settings.muteEmotes.description",
    "$option_binding_name": "#toggle_emote_chat",
    "$toggle_name": "toggle_emote_chat"
  },

  "toggle_chat_tts@settings_common.option_toggle": {
    "$one_line_layout": true,
    "$has_option_description": true,
    "$option_label": "chat.settings.tts",
    "$option_description": "chat.settings.tts.description",
    "$option_binding_name": "#toggle_tss",
    "$toggle_name": "toggle_tts",
    "bindings": [
      {
        "binding_name": "(not #hide_chat)",
        "binding_name_override": "#enabled"
      }
    ]
  },

  "title_panel": {
    "type": "panel",
    "size": [ "100%c", 12 ],
    "controls": [
      {
        "text": {
          "type": "label",
          "text": "$section_title",
          "layer": 4,
          "color": "$main_header_text_color",
          "size": [ "default", 10 ]
        }
      }
    ]
  },

  "padding": {
    "type": "panel",
    "size": [ 0, 4 ]
  },

  "reset_icon": {
    "type": "image",
    "texture": "textures/ui/refresh",
    "layer": 2,
    "size": [ 16, 16 ]
  },

  "reset_button_panel": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100% - 24px", "100% - 2px" ],
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "controls": [
            {
              "icon_panel": {
                "type": "panel",
                "size": [ "100%c", "100%" ],
                "controls": [
                  {
                    "icon@chat_settings.reset_icon": {
                      "anchor_from": "center",
                      "anchor_to": "center"
                    }
                  }
                ]
              }
            },
            {
              "padding": {
                "type": "panel",
                "size": [ 8, 0 ]
              }
            },
            {
              "label_panel": {
                "type": "panel",
                "size": [ "100%c - 4px", "100%" ],
                "controls": [
                  {
                    "label": {
                      "type": "label",
                      "text": "options.resetSettings",
                      "text_alignment": "center",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "color": "$text_color",
                      "layer": 4,
                      "size": [ "default", 10 ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "reset_button_icon@common_buttons.light_content_button": {
    "$pressed_button_name": "button.reset_chat_settings",
    "$button_content": "chat_settings.reset_button_panel",
    "$focus_id": "reset_button_focus_id",
    "$focus_override_down": "mute_all_toggle_focus_id",
    "size": [ "100%", 28 ]
  },

  "typeface_dropdown": {
    "$option_dropdown_size": [ "100%", 28 ]
  },

  "colors_dropdown_base": {
    "$option_dropdown_size": [ "100%", 28 ]
  },

  "chat_settings_scrolling_content": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "stack_content": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%", "100%cm" ],
          "controls": [
            {
              "left_panel_control": {
                "type": "stack_panel",
                "size": [ "fill", "100%c" ],
                "controls": [
                  { "toggle_0@toggle_mute_all_chat": {} },
                  { "toggle_1@toggle_mute_emote_chat": {} },
                  { "toggle_2@toggle_chat_tts": {} }
                ]
              }
            },
            {
              "padding": {
                "type": "panel",
                "size": [ 4, 0 ]
              }
            },
            {
              "right_panel_control": {
                "type": "stack_panel",
                "size": [ "fill", "100%c" ],
                "controls": [
                  { "dropdown_1@typeface_dropdown": {} },
                  { "dropdown_2@chat_color_dropdown": {} },
                  { "dropdown_3@mentions_color_dropdown": {} },
                  { "slider_1@font_size_slider": {} },
                  { "slider_2@line_spacing_slider": {} }
                ]
              }
            }
          ]
        }
      },
      {
        "padding_0": {
          "type": "panel",
          "size": [ 0, 2 ]
        }
      },
      {
        "button_0@reset_button_icon": {}
      },
      {
        "padding_1": {
          "type": "panel",
          "size": [ 0, 2 ]
        }
      }
    ]
  },

  "chat_setting_scrolling_panel": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$scroll_bar_left_padding_size": [ 2, 0 ],
    "$scroll_bar_right_padding_size": [ 0, 0 ],
    "$scroll_size": [ 4, "100% - 4px" ],
    "size": [ "100% - 4px", "100% - 2px" ],
    "offset": [ 1, 1 ]
  },

  "chat_settings_popup@popup_dialog.modal_input_panel": {
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "bg@popup_dialog.black_tint_image": {
          "alpha": 0.5
        }
      },
      {
        "main_panel": {
          "type": "panel",
          "size": [ 276, 168 ],
          "controls": [
            {
              "close@common.close_button": {
                "$close_button_to_button_id": "button.close_chat_settings",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "size": [ 14, 14 ],
                "offset": [ -6, 6 ]
              }
            },
            {
              "main@common_dialogs.main_panel_no_buttons": {
                "$show_close_button": false,
                "$text_name": "chat.settings",
                "$child_control": "chat_settings.chat_setting_scrolling_panel",
                "$fill_alpha": 0.7
              }
            }
          ]
        }
      }
    ]
  }
}
