{
  "namespace": "play",

  //---------------------------------------------------------------------------
  // Images Section
  //---------------------------------------------------------------------------

  "quick_play_icon": {
    "type": "image",
    "texture": "textures/ui/random_dice",
    "layer": 2,
    "size": [ 16, 16 ]
  },

  //---------------------------------------------------------------------------
  // Common Section
  //---------------------------------------------------------------------------

  "horizontal_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "100%c" ]
  },

  "vertical_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100%", "100%c" ]
  },

  "padding_1x": {
    "type": "panel",
    "size": [ 1, 0 ]
  },

  "padding_2x": {
    "type": "panel",
    "size": [ 2, 0 ]
  },

  "padding_4x": {
    "type": "panel",
    "size": [ 4, 0 ]
  },

  "padding_6x": {
    "type": "panel",
    "size": [ 6, 0 ]
  },

  "padding_1y": {
    "type": "panel",
    "size": [ 0, 1 ]
  },

  "padding_2y": {
    "type": "panel",
    "size": [ 0, 2 ]
  },

  "padding_4y": {
    "type": "panel",
    "size": [ 0, 4 ]
  },


  "padding_6y": {
    "type": "panel",
    "size": [ 0, 6 ]
  },


  "padding_8y": {
    "type": "panel",
    "size": [ 0, 8 ]
  },

  //---------------------------------------------------------------------------
  // World Section
  //---------------------------------------------------------------------------

  "create_new_dark_button@common_buttons.dark_text_button": {
    "$button_type_panel": "common_assets.icon_wrapper",
    "$button_text": "selectTemplate.generateRandom",
    "$button_content": "play.worlds_icon",
    "size": [ "fill", "100%" ],
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.new_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_local_world_create"
      },
      {
        "requires": "$is_editor_mode_enabled",
        "$button_text": "playscreen.editor.create"
      }
    ]
  },

  "ui_switch_dark_button@common_buttons.dark_text_button": {
    "$pressed_button_name": "button.switch_to_new_ui",
    "$button_text": "options.newUiEditWorld.initiate",
    "size": [ "100%", "100%" ]
  },

  "quick_play_dark_button@common_buttons.dark_text_button": {
    "$button_type_panel": "common_assets.icon_wrapper",
    "$pressed_button_name": "button.menu_quick_play",
    "$button_text": "menu.quickplay",
    "$button_content": "play.quick_play_icon",
    "size": [ "fill", "100%" ]
  },

  "import_world_dark_button@common_buttons.dark_content_button": {
    "$button_content": "play.import_icon",
    "size": [ 28, "100%" ],
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.archived_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_import_level"
      }
    ]
  },

  "icon_text_tmp_panel": {
    "type": "panel",
    "size": [ "100% - 2px", "100% - 2px" ],
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "controls": [
            {
              "icon_panel": {
                "type": "panel",
                "size": [ "100%", "100%c" ],
                "controls": [
                  {
                    "icon@$button_content": {
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "layer": 4
                    }
                  }
                ]
              }
            },
            {
              "padd": {
                "type": "panel",
                "size": [ 0, 4 ]
              }
            },
            {
              "label_panel": {
                "type": "panel",
                "size": [ "100%", "100%c" ],
                "controls": [
                  {
                    "label@common_buttons.custom_ui_binding_button_label": {
                      "$button_font_scale_factor": 0.8
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  
  "edit_world_item_button@common_buttons.dark_text_button": {
    "$button_type_panel": "play.icon_text_tmp_panel",
    "$pressed_button_name": "button.menu_local_world_item_edit",
    "$button_content": "play.edit_icon",
    "$button_text": "Editar",
    "$button_tts_header": "accessibility.play.editWorld",
    "size": [ 42, "100%" ],
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "local_worlds"
      }
    ]
  },

  "world_title": {
    "type": "label",
    "text": "$world_label_text",
    "layer": 4,
    "color": "$world_name_text_color",
    "bindings": "$world_label_bindings",
    "size": [ "default", 12 ]
  },

  "world_subtitle": {
    "type": "label",
    "text": "$world_label_text",
    "layer": 4,
    "color": "$world_subtitle_text_color",
    "bindings": "$world_label_bindings",
    "size": [ "default", 12 ]
  },

  "local_world_text_panel": {
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "stack_panel_content": {
          "type": "panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "100% - 12px", "100%cm" ],
          "controls": [
            {
              "horizontal_panel_1": {
                "type": "stack_panel",
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "size": [ "100%c", 24 ],
                "controls": [
                  {
                    "world_name_title@play.world_title": {
                      "$world_label_text": "#text",
                      "$world_label_bindings": [
                        {
                          "binding_type": "collection",
                          "binding_name": "#local_world_name",
                          "binding_name_override": "#text",
                          "binding_collection_name": "local_worlds"
                        }
                      ]
                    }
                  },
                  {
                    "horizontal": {
                      "type": "stack_panel",
                      "orientation": "horizontal",
                      "size": [ "100%c", 12 ],
                      "controls": [
                        {
                          "world_gamemode_text@common_assets.label_background": {
                            "$label_text": "#text",
                            "$label_color": "$world_name_text_color",
                            "$label_background": "textures/ui/Black",
                            "$label_background_size": [ "100%c + 4px", 12 ],
                            "$label_bindings": [
                              {
                                "binding_type": "collection",
                                "binding_name": "#local_world_game_mode",
                                "binding_name_override": "#text",
                                "binding_collection_name": "local_worlds"
                              }
                            ]
                          }
                        },
                        {
                          "lock_icon_panel": {
                            "type": "panel",
                            "size": [ 16, 12 ],
                            "bindings": [
                              {
                                "binding_name": "#world_lock_visible",
                                "binding_type": "collection",
                                "binding_name_override": "#visible",
                                "binding_collection_name": "local_worlds"
                              }
                            ],
                            "controls": [
                              {
                                "lock_icon": {
                                  "type": "image",
                                  "texture": "textures/ui/lock",
                                  "anchor_from": "center",
                                  "anchor_to": "center",
                                  "layer": 12,
                                  "size": [ 10, 10 ]
                                }
                              },
                              {
                                "lock_icon_shadow": {
                                  "type": "image",
                                  "texture": "textures/ui/lock",
                                  "anchor_from": "center",
                                  "anchor_to": "center",
                                  "layer": 8,
                                  "color": [ 0.626, 0.626, 0.626 ],
                                  "size": [ 10, 10 ],
                                  "offset": [ 1, 1 ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "horizontal_panel_2": {
                "type": "panel",
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "size": [ "100%c", 24 ],
                "controls": [
                  {
                    "world_size_text@play.world_subtitle": {
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "$world_label_text": "#text",
                      "$world_label_bindings": [
                        {
                          "binding_type": "collection",
                          "binding_name": "#local_worldfile_size",
                          "binding_name_override": "#text",
                          "binding_collection_name": "local_worlds"
                        }
                      ]
                    }
                  },
                  {
                    "world_date_text@play.world_subtitle": {
                      "anchor_from": "bottom_right",
                      "anchor_to": "bottom_right",
                      "$world_label_text": "#text",
                      "$world_label_bindings": [
                        {
                          "binding_type": "collection",
                          "binding_name": "#local_world_date",
                          "binding_name_override": "#text",
                          "binding_collection_name": "local_worlds"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "local_world_item_button": {
    "size": [ "fill", "100%" ]
  },

  "local_world_item": {
    "size": [ "100%", 42 ],
    "controls": [
      { "local_world_item@play.local_world_item_button": {} },
      { "edit_world_item@play.edit_world_item_button": {} }
    ]
  },

  "create_on_realms_button_panel/create_on_realms_button": {
    "$button_type_panel": "common_assets.icon_wrapper",
    "$button_content": "play.realms_icon",
    "size": [ "100%", 28 ]
  },

  "sign_in_to_view_realms_button": {
    "size": [ "100%", 30 ]
  },

  "worlds_stack_panel": {
    "controls": [
      { "realm_warning_tip@play.realm_warning_tip": {} },
      { "padd_0@play.padding_2x": {} },
      {
        "header_button_panel@play.horizontal_panel": {
          "ignored": "$local_world_upload",
          "size": [ "100%", 28 ],
          "controls": [
            { "create_new_world@play.create_new_dark_button": {} },
            { "quick_play_world@play.quick_play_dark_button": {} },
            { "import_world@play.import_world_dark_button": {} }
          ]
        }
      },
      { "create_on_realms@play.create_on_realms_button_panel": {} },
      {
        "world_title_divider@common_assets.label_section_divider": {
          "$label_text": "playscreen.worlds",
          "$label_background": "textures/ui/hud_tip_text_background",
          "variables": [
            {
              "requires": "($pre_release and not $is_editor_mode_enabled)",
              "$label_text": "playscreen.beta_worlds"
            },
            {
              "requires": "$is_editor_mode_enabled",
              "$label_text": "playscreen.editor.worlds"
            }
          ],
          "$label_bindings": [
            {
              "binding_name": "#local_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "worlds_crossplatform_disabled_panel@common_assets.label_background_panel": {
          "$label_text": "crossPlatformToggle.crossPlatformDisabled.realms",
          "$label_visible": "(not $is_realms_enabled)",
          "$label_bindings": [
            {
              "binding_name": "(not #cross_platform_enabled)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "realms_panel": {
          "type": "stack_panel",
          "ignored": "(not $is_realms_enabled)",
          "size": [ "100%", "100%c" ],
          "bindings": [
            {
              "binding_name": "#personal_realms_grid_visible",
              "binding_name_override": "#visible"
            }
          ],
          "variables": [
            {
              "requires": "(not $pre_release)",
              "$tts_section_header": "playscreen.realms"
            },
            {
              "requires": "($pre_release and not $beta_build)",
              "$tts_section_header": "playscreen.previewRealms"
            },
            {
              "requires": "($pre_release and $beta_build)",
              "$tts_section_header": "playscreen.betaRealms"
            }
          ],
          "controls": [
            {
              "realms_label@play.world_list_label_panel": {
                "ignored": "$world_picker_screen",
                "$label_text": "$tts_section_header",
                "bindings": [
                  {
                    "binding_name": "#realm_label_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "sign_in_to_view_realms_button@play.sign_in_to_view_realms_button": {}
            },
            {
              "realms_previews_panel": {
                "type": "panel",
                "size": [ "100%", 32 ],
                "bindings": [
                  {
                    "binding_name": "#free_preview_realm_button_visible",
                    "binding_name_override": "#visible"
                  }
                ],
                "controls": [
                  {
                    "new_offers_icon@common_store.new_offer_icon": {
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "layer": 8,
                      "offset": [ 0, -2 ],
                      "bindings": [
                        {
                          "binding_name": "#free_preview_realm_new_button_visible",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "realms_world_item_button@common_buttons.dark_content_button": {
                      "size": [ "100%", "100%" ],
                      "$pressed_button_name": "button.free_preview_realm_available",
                      "$button_content": "play.realms_trial_content_panel",
                      "$button_content_text": "#free_preview_realm_available",
                      "$world_details_text": "playscreen.withYourPaidRealms",
                      "$text_binding_condition": "once",
                      "$world_header_text_binding_type": "global",
                      "$world_details_text_binding_type": "none",
                      "$focus_id": "free_preview_realm_available_button"
                    }
                  }
                ]
              }
            },
            {
              "personal_realms@play.realms_world_item_grid": {
                "ignored": "$world_picker_screen",
                "$grid_name": "#personal_realms_grid_dimension",
                "$realms_worlds_collection_name": "personal_realms",
                "$grid_item_layout": "play.realms_world_item"
              }
            },
            {
              "placeholder_personal_realms_panel@play.label_background": {
                "ignored": "$world_picker_screen",
                "size": [ "100%", "100%c - 12px" ],
                "min_size": [ "100%", 40 ],
                "controls": [
                  {
                    "placeholder_loading_personal_realms": {
                      "type": "grid",
                      "layer": 1,
                      "anchor_to": "top_left",
                      "anchor_from": "top_left",
                      "size": [ "100%", "default" ],
                      "collection_name": "loading_personal_realms",
                      "grid_item_template": "play.empty_grid",
                      "grid_dimension_binding": "#loading_personal_realms_grid_dimension",
                      "bindings": [
                        {
                          "binding_name": "#loading_personal_realms_grid_dimension"
                        }
                      ]
                    }
                  },
                  {
                    "loading_friends_realms_label@play.loading_label": {
                      "$message_binding_name": "#realms_loading_display_message"
                    }
                  },
                  {
                    "padding": {
                      "type": "panel",
                      "size": [ "100%", 4 ]
                    }
                  },
                  {
                    "progress_loading_bars@play.progress_loading_bars": {}
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#loading_personal_realms_grid_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "grid@play.local_world_item_grid": {
          "$tts_section_header": "playscreen.worlds",
          "variables": [
            {
              "requires": "$pre_release",
              "$tts_section_header": "playscreen.beta_worlds"
            }
          ]
        }
      },
      {
        "no_local_worlds_label@play.label_content_template": {
          "ignored": "(not $local_world_upload)",
          "$label_content_label": "",
          "$label_content_content": "play.information_panel",
          "$information_panel_label_text": "localWorld.no_local_world_label",
          "bindings": [
            {
              "binding_name": "#no_local_worlds",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "no_local_worlds_switch_setting@play.no_local_worlds_switch_setting": {}
      },
      {
        "beta_retail_local_padding": {
          "type": "panel",
          "size": [ "100%", 4 ],
          "bindings": [
            {
              "binding_name": "#beta_retail_local_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "beta_retail_local_worlds_label@play.world_list_label_panel": {
          "$label_text": "playscreen.worlds",
          "bindings": [
            {
              "binding_name": "#beta_retail_local_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "beta_retail_local_grid@play.beta_retail_local_world_item_grid": {
          "$tts_section_header": "playscreen.worlds"
        }
      },
      {
        "loading_legacy_worlds_panel_padding": {
          "ignored": "(not $supports_legacy_worlds)",
          "type": "panel",
          "size": [ "100%", 4 ],
          "bindings": [
            {
              "binding_name": "#sync_legacy_worlds_button_visible",
              "binding_name_override": "#visible",
              "binding_type": "global"
            }
          ]
        }
      },
      {
        "legacy_worlds_button": {
          "type": "stack_panel",
          "ignored": "$auto_fetch_legacy_worlds",
          "controls": [
            {
              "legacy_worlds_label@play.world_list_label_panel": {
                "$label_text": "playscreen.dontSeeLegacyWorlds",
                "ignored": "(not $supports_legacy_worlds)",
                "bindings": [
                  {
                    "binding_name": "#sync_legacy_worlds_button_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            },
            {
              "sync_legacy_worlds_button_panel": {
                "ignored": "(not $supports_legacy_worlds)",
                "type": "panel",
                "layer": 1,
                "size": [ "100%", "100%c + 4px" ],
                "controls": [
                  {
                    "button@play.sync_legacy_worlds_button": {
                      "layer": 1,
                      "size": [ "100%", 30 ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "loading_legacy_worlds_panel@play.label_background": {
          "size": [ "100%", "100%c - 12px" ],
          "min_size": [ "100%", 39 ], // Grid item size is 29 + 10 for label, grid items overdraw by 1px
          "controls": [
            {
              "loading_legacy_worlds_label@play.loading_label": {
                "$message_binding_name": "#legacy_worlds_loading_display_message"
              }
            },
            {
              "padding": {
                "type": "panel",
                "size": [ "100%", 4 ]
              }
            },
            {
              "progress_loading_bars@play.progress_loading_bars": {
                "$visible_binding_name": "#loading_legacy_worlds_grid_visible"
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#loading_legacy_worlds_grid_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "padding_2": {
          "type": "panel",
          "size": [ "100%", 4 ],
          "bindings": [
            {
              "binding_name": "#legacy_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "upgrade_legacy_worlds_label@play.world_list_label_with_color_panel": {
          "$label_text": "playscreen.upgradeLegacyWorlds",
          "$square_color": "$world_diskspace_editions_fill",
          "variables": [
            {
              "requires": "$pre_release",
              "$label_text": "playscreen.beta_legacy_worlds"
            },
            {
              "requires": "($is_preview_app and (not $legacy_worlds_supports_migration))",
              "$label_text": "playscreen.upgradeRetailWorlds"
            }
          ],
          "bindings": [
            {
              "binding_name": "#legacy_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "legacy_world_item_grid@play.legacy_world_item_grid": {
          "$tts_section_header": "playscreen.upgradeLegacyWorlds",
          "variables": [
            {
              "requires": "$pre_release",
              "$tts_section_header": "playscreen.beta_legacy_worlds"
            },
            {
              "requires": "($is_preview_app and (not $legacy_worlds_supports_migration))",
              "$label_text": "playscreen.upgradeRetailWorlds"
            }
          ]
        }
      },
      {
        "beta_retail_legacy_padding": {
          "type": "panel",
          "size": [ "100%", 4 ],
          "bindings": [
            {
              "binding_name": "#beta_retail_legacy_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "beta_retail_legacy_worlds_label@play.world_list_label_panel": {
          "$label_text": "playscreen.upgradeLegacyWorlds",
          "variables": [
            {
              "requires": "($is_preview_app and (not $legacy_worlds_supports_migration))",
              "$label_text": "playscreen.upgradeRetailWorlds"
            }
          ],
          "bindings": [
            {
              "binding_name": "#beta_retail_legacy_worlds_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "beta_retail_legacy_grid@play.beta_retail_legacy_world_item_grid": {
          "$tts_section_header": "playscreen.upgradeLegacyWorlds",
          "variables": [
            {
              "requires": "($is_preview_app and (not $legacy_worlds_supports_migration))",
              "$tts_section_header": "playscreen.upgradeRetailWorlds"
            }
          ]
        }
      },
      { "padd_3@play.padding_4y": {} },
      {
        "ui_switch_information_panel@common_assets.label_background_with_buttons": {
          "$label_title": "options.newUiPlayScreen.initiate",
          "$label_description": "options.newUiEditWorld.info",
          "$label_button_panel": "play.ui_switch_dark_button",
          "$label_bindings": [
            {
              "binding_name": "#show_new_play_screen_opt_in",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      { "padding_end@play.padding_4y": {} }
    ]
  },

  "worlds_stack_scrolling@common.scrolling_panel": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "layer": 4,
    "$show_background": false,
    "$scrolling_content": "play.worlds_stack_panel",
    "$scroll_bar_left_padding_size": [ 2.5, 0 ],
    "$scroll_bar_right_padding_size": [ 2, 0 ],
    "$scrolling_pane_size": [ "100%", "100%" ],
    "size": [ "100%", "100%" ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "world_navigation_tab_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Friends Section
  //---------------------------------------------------------------------------

  "friends_scroll_panel@common.empty_panel": {},

  "friend_stack_scrolling@common.scrolling_panel": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "layer": 4,
    "$show_background": false,
    "$scrolling_content": "play.friends_scroll_panel",
    "$scrolling_pane_size": [ "100%", "100%" ],
    "size": [ "100%", "100%" ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "friends_navigation_tab_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Servers Section
  //---------------------------------------------------------------------------

  "server_grid_item_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "add_server_button_panel": {
          "type": "panel",
          "size": [ "100%", 48 ],
          "controls": [
            {
              "add_server_button@common_toggles.dark_text_toggle": {
                "$button_type_panel": "common_assets.icon_wrapper",
                "$button_text": "networkWorld.add_server",
                "$button_content": "play.plus_icon",
            
                "$radio_toggle_group": true,
                "$toggle_name": "server_navigation_toggle",
                "$toggle_view_binding_name": "add_server_toggle_button",
                "$toggle_state_binding_name": "#toggle_state",
                "$toggle_on_hover_binding_name": "none",
                "$toggle_tab_focus_binding_type": "global",
                "$toggle_tab_focus_binding_name": "#navigation_tab_focus_precedence",
                "$toggle_group_forced_index": 100,
                "size": [ "100% - 16px", 28 ]
              }
            }
          ]
        }
      },
      {
        "server_title_panel": {
          "type": "panel",
          "size": [ "100%", 14 ],
          "controls": [
            {
              "stack_bg": {
                "type": "image",
                "texture": "textures/ui/Black",
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 2,
                "alpha": 0.4,
                "size": [ "100% - 8px", 14 ]
              }
            },
            {
              "stack_content": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ "100%cm", 10 ],
                "controls": [
                  {
                    "label_panel": {
                      "type": "label",
                      "text": "#server_world_item_count",
                      "layer": 4,
                      "shadow": true,
                      "color": "$body_text_color",
                      "size": [ "default", 10 ],
                      "bindings": [
                        {
                          "binding_name": "#server_world_item_count" 
                        }
                      ]
                    }
                  },
                  {
                    "padd@play.padding_2x": {}
                  },
                  {
                    "label_panel": {
                      "type": "label",
                      "text": "Destacado",
                      "layer": 4,
                      "shadow": true,
                      "color": "$body_text_color",
                      "size": [ "default", 10 ]
                    }
                  }
                ]
              } 
            }
          ]
        }
      }
    ]
  },

  "plus_icon": {
    "type": "image",
    "texture": "textures/ui/color_plus",
    "layer": 2,
    "size": [ 12, 12 ]
  },

  "server_stack_scrolling": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "100%" ],
    "ttsSectionContainer": true,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "server_navigation_tab_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "left_section_background": {
          "type": "image",
          "texture": "textures/ui/Black",
          "alpha": 0.5,
          "layer": 2,
          "size": [ "30%", "100%" ],
          "controls": [
            {
              "left_section@common.scrolling_panel": {
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "$show_background": false,
                "$scrolling_content": "play.server_grid_item_panel",
                "$scrolling_pane_size": [ "100%", "100%" ],
                "size": [ "100%", "100%" ]
              }
            }
          ]
        }
      },
      {
        "padd@play.padding_4x": {}
      },
      {
        "right_section": {
          "type": "image",
          "texture": "textures/ui/Black",
          "alpha": 0.5,
          "layer": 2,
          "size": [ "fill", "100%" ],
          "controls": [
            {
              "left_section@common.scrolling_panel": {
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "$show_background": false,
                "$scrolling_content": "play.server_grid_item_panel",
                "$scrolling_pane_size": [ "100%", "100%" ],
                "size": [ "100%", "100%" ]
              }
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Screen
  //---------------------------------------------------------------------------

  "navigation_button_stack_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "100%" ],
    "ttsSectionContainer": true,
    "controls": [
      {
        "worlds@play.world_navigation_tab": {
          "size": [ "33%", "100%" ]
        }
      },
      {
        "friend@play.friends_navigation_tab": {
          "size": [ "33%", "100%" ]
        }
      },
      {
        "server@play.server_navigation_tab": {
          "size": [ "fill", "100%" ]
        }
      }
    ]
  },

  "play_screen_default_content": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "scrolling_panel": {
          "type": "input_panel",

          "focus_container": true,
          "use_last_focus": true,
          "ttsSectionContainer": true,
          "focus_navigation_mode_down": "contained",
          "focus_navigation_mode_up": "contained",
          "focus_navigation_mode_right": "contained",
          "focus_navigation_mode_left": "contained",

          "size": [ "100%", "100%" ],
          "controls": [
            { "worlds@play.worlds_stack_scrolling": {} },
            { "friend@play.friend_stack_scrolling": {} },
            { "server@play.server_stack_scrolling": {} }
          ]
        }
      }
    ]
  },

  "fullscreen_header": {
    "type": "stack_panel",

    "$fullscreen_content": "$main_screen_panel",
    "$fullscreen_buttons": "play.navigation_button_stack_panel",

    "size": [ "100%", "100%" ],
    "controls": [
      {
        "header_image": {
          "type": "image",
          "texture": "textures/ui/StoreTopBar",
          "layer": 2,
          "size": [ "100%", 24 ],
          "controls": [
            {
              "header_buttons": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "size": [ "100%c", 24 ],
                "offset": [ 0, 2 ],
                "ignored": true,
                "controls": [
                  {
                    "notification_button@common_buttons.no_background_content_button": {
                      "$pressed_button_name": "button.menu_invite_notification",
                      "$button_type_panel": "play.bell_icon",
                      "size": [ 24, 24 ]
                    }
                  },
                  {
                    "notification_@common_buttons.no_background_content_button": {
                      "$pressed_button_name": "button.no_interaction",
                      "$button_type_panel": "crafing.inventory_icon",
                      "size": [ 24, 24 ]
                    }
                  }
                ]
              }
            },
            {
              "back_button_panel": {
                "type": "panel",
                "size": [ "100%", 20 ],
                "controls": [
                  {
                    "back_button@common.back_content_panel": {
                      "offset": [ 2, 0 ]
                    }
                  }
                ]
              }
            },
            {
              "title_stack_panel": {
                "type": "panel",
                "size": [ "100%", "100%" ],
                "controls": [
                  {
                    "stack_content": {
                      "type": "panel",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "size": [ "100%", 16 ],
                      "controls": [
                        {
                          "gameplay_title": {
                            "type": "label",
                            "text": "menu.play",
                            "text_alignment": "center",
                            "font_type": "MinecraftTen",
                            "font_scale_factor": 1.2,
                            "layer": 4,
                            "color": "$header_title_text_color",
                            "size": [ "default", 16 ],
                            "offset": [ 0, -1 ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "fullscreen_content": {
          "type": "panel",
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "fullscreen_content@$fullscreen_content": {
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ "100% - 12px", "100% - 8px" ]
              }
            }
          ]
        }
      },
      {
        "fullscreen_buttons": {
          "type": "panel",
          "size": [ "100%", 30 ],
          "controls": [
            {
              "fullscreen_buttons@$fullscreen_buttons": {
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ "100%", "100%" ]
              }
            }
          ]
        }
      }
    ]
  },

  "play_screen_content": {
    "variables": [
      {
        "requires": "(not $education_edition and not $is_editor_mode_enabled and not $is_editor_playtest_roundtrip)",
        "$main_screen_panel": "play.play_screen_default_content"
      }/*,
      {
        "requires": "($education_edition and not $is_editor_mode_enabled and not $is_editor_playtest_roundtrip)",
        "$main_screen_panel": "play.edu_play_screen_panel"
      },
      {
        "requires": "((not $education_edition and $is_editor_mode_enabled) or $is_editor_playtest_roundtrip)",
        "$main_screen_panel": "play.editor_play_screen_panel"
      }*/
    ],
    "controls": [
      {
        "editor_text_panel@play.editor_text_panel": {
          "visible": "$is_editor_mode_enabled"
        }
      },
      {
        "popup_dialog_factory": {
          "type": "factory",
          "control_ids": {
            "join_by_code": "@play.popup_dialog_join_by_code",
            "high_ping_warning": "@play.popup_dialog_high_ping"
          }
        }
      },
      {
        "fullscreen_header@play.fullscreen_header": {}
      }
    ]
  },

  "play_screen": {
    "$header_bar_control": "common_assets.store_top_bar",
    "$header_safezone_control": "common_assets.store_top_bar_filler",
    "$screen_bg_content": "common.screen_background",
    "$screen_background_alpha": 0.4
  }
}