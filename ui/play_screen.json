{
  "namespace": "play",

  "create_new_icon": {
    "type": "image",
    "texture": "textures/ui/mashup_world",
    "size": [ 16, 16 ]
  },

  "create_realm_icon": {
    "type": "image",
    "texture": "textures/ui/realmPortalSmall",
    "size": [ 12, 14 ]
  },

  "quick_play_icon": {
    "type": "image",
    "texture": "textures/ui/random_dice",
    "size": [ 16, 16 ]
  },

  "tab_common_toggle": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100% - 2px", "100% - 2px" ],
    "controls": [
      { "icon@$tab_icon": {
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": [ 16, 16 ]
      } },
      { "padding": {
          "type": "panel",
          "size": [ 4, 0 ]
      } },
      { "stack_panel": {
          "type": "stack_panel",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "100%c", "100%" ],
          "offset": [ 0, 0 ],
          "controls": [
            { "tab_name": {
                "type": "label",
                "text": "$tab_text_name",
                "layer": 3,
                "shadow": true,
                "size": [ "default", 10 ]
            } },
            { "horizontal": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": [ "100%c", 10 ],
                "controls": [
                  { "count_common": {
                      "type": "label",
                      "text": "$count_text_name",
                      "layer": 3,
                      "shadow": true,
                      "color": [ 0.8, 0.8, 0.8 ],
                      "size": [ "default", 8 ],
                      "bindings": [
                        { "binding_name": "$count_text_name" }
                      ]
                  } },
                  { "padding": {
                      "type": "panel",
                      "size": [ 2, 0 ]
                  } },
                  { "count_label": {
                      "type": "label",
                      "text": "craftingScreen.tab.items",
                      "layer": 3,
                      "shadow": true,
                      "color": [ 0.8, 0.8, 0.8 ],
                      "size": [ "default", 8 ]
                  } }
                ]
            } }
          ]
      } }
    ]
  },

  "tab_template@settings_common.section_toggle_base": {
    "$default_border_visible": false,
    "$hover_border_visible": false,
    "$button_type_panel": "play.tab_common_toggle",
    "$toggle_tts_enabled_binding_type": "global",
    "$radio_toggle_group": true,
    "$toggle_name": "navigation_tab",
    "$toggle_group_default_selected": "$default_tab",
    "$toggle_tts_type_priority": 1001,
    "$toggle_tts_toggle_on_text": "",
    "$toggle_tts_toggle_off_text": "",
    "$toggle_tts_index_priority": 1002,

    "$default_texture": "textures/ui/hud_tip_text_background",
    "$hover_texture": "textures/ui/hud_tip_text_background",
    "$pressed_texture": "textures/ui/hud_tip_text_background",
    "$pressed_no_hover_texture": "textures/ui/hud_tip_text_background",
    "$locked_texture": "textures/ui/hud_tip_text_background",

    "$default_texture_alpha": 0.4,
    "$default_checked_texture_alpha": 0.4,
    "$hover_texture_alpha": 0.6,
    "$hover_checked_texture_alpha": 0.6,
    "$locked_alpha": 0.8
  },

  "world_navigation_tab@tab_template": {
    "$tab_icon": "play.worlds_icon",
    "$count_text_name": "#world_item_count",
    "$tab_text_name": "selectWorld.tab.worlds",
    "$toggle_group_forced_index": 0,
    "$toggle_view_binding_name": "world_navigation_tab_toggle"
  },

  "friends_navigation_tab@tab_template": {
    "$tab_icon": "play.friends_icon_1",
    "$count_text_name": "#friend_world_item_count",
    "$tab_text_name": "selectWorld.tab.friends",
    "$toggle_group_forced_index": 1,
    "$toggle_view_binding_name": "friends_navigation_tab_toggle"
  },

  "server_navigation_tab@tab_template": {
    "$tab_icon": "play.server_tab_icon",
    "$count_text_name": "#server_world_item_count",
    "$tab_text_name": "selectWorld.tab.thirdParty",
    "$toggle_group_forced_index": 2,
    "$toggle_view_binding_name": "server_navigation_tab_toggle"
  },

  "control_button_template": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "controls": [
            { "icon_panel": {
                "type": "panel",
                "size": [ "100%c", "100%" ],
                "controls": [
                  { "icon@$button_icon": {
                      "anchor_from": "center",
                      "anchor_to": "center"
                  } }
                ]
              }
            },
            { "padding": {
                "type": "panel",
                "size": [ 4, 0 ]
            } },
            { "text_panel": {
                "type": "panel",
                "size": [ "100%c", "100%" ],
                "controls": [
                  {
                    "text": {
                      "type": "label",
                      "text": "$button_text",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "shadow": true,
                      "layer": 3,
                      "size": [ "default", 10 ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "quick_play@common_buttons.border_content_button": {
    "$pressed_button_name": "button.menu_quick_play",
    "$button_text": "menu.quickplay",
    "$button_content": "play.control_button_template",
    "$button_icon": "play.quick_play_icon",
    "size": [ "100%", 28 ]
  },

  "create_new_world@common_buttons.border_content_button": {
    "$button_text": "createWorldUpsell.button.world",
    "$button_content": "play.control_button_template",
    "$button_icon": "play.create_new_icon",
    "size": [ "100%", 28 ],
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.new_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_local_world_create"
      },
      {
        "requires": "$is_editor_mode_enabled",
        "$button_text": "playscreen.editor.create"
      }
    ]
  },

  "create_new_realm@common_buttons.border_content_button": {
    "$pressed_button_name": "button.create_on_realms_button",
    "$button_text": "createWorldUpsell.button.realm",
    "$button_content": "play.control_button_template",
    "$button_icon": "play.create_realm_icon",
    "size": [ "100%", 28 ]
  },

  "import_world@common_buttons.border_content_button": {
    "$button_tts_header": "accessibility.play.importWorld",
    "$button_text": "accessibility.play.importWorld",
    "$button_content": "play.control_button_template",
    "$button_icon": "play.import_icon",
    "size": [ "100%", 28 ],
    "variables": [
      {
        "requires": "($local_world_upload)",
        "$pressed_button_name": "button.archived_world_upload"
      },
      {
        "requires": "(not $local_world_upload)",
        "$pressed_button_name": "button.menu_import_level"
      }
    ]
  },

  "control_panel": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 128, "100%" ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "alpha": 0.4,
          "layer": 1
        }
      },
      {
        "content": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": [ "100% - 4px", "100% - 4px" ],
          "controls": [
            { "create_world@create_new_world": {} },
            { "create_realm@create_new_realm": {} },
            { "quick_play@quick_play": {} },
            { "import_world@import_world": {} }
          ]
        }
      }
    ]
  },

  "common_tab_content_panel": {
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "anchor_from": "center",
          "anchor_to": "center",
          "alpha": 0.4,
          "layer": 1
        }
      },
      {
        "content@$scroll_tab_content": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "layer": 2,
          "ttsSectionContainer": true
        }
      }
    ]
  },

  "main_content_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "fill" ],
    "ttsSectionContainer": true,
    "controls": [
      { "worlds_tab_content@play.worlds_tab_content_panel": {} },
      { "friends_tab_content@play.friends_tab_content_panel": {} },
      { "server_tab_content_panel@play.server_tab_content_panel": {} }
    ]
  },

  "navigation_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", 26 ],
    "controls": [
      { "world_navigation_tab@play.world_navigation_tab": {
          "size": [ "32%", "100%" ]
      } },
      { "padding0": {
          "type": "panel",
          "size": [ 2, 0  ]
      } },
      { "friends_navigation_tab@play.friends_navigation_tab": {
          "size": [ "32%", "100%" ]
      } },
      { "padding1": {
          "type": "panel",
          "size": [ 2, 0  ]
      } },
      { "server_navigation_tab@play.server_navigation_tab": {
          "size": [ "fill", "100%" ]
      } }
    ]
  },

  "main_stack_panel": {
    "type": "stack_panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100%", "100% - 4px" ],
    "controls": [
      { "header@common_assets.topbar_panel": {
          "$topbar_title_text": "menu.play"
      } },
      { "padding": {
          "type": "panel",
          "size": [ 0, 2 ]
      } },
      {
        "stack_panel": {
          "type": "panel",
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "background": {
                "type": "image",
                "texture": "textures/ui/hud_tip_text_background",
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 1,
                "alpha": 0.2,
                "size": [ "100% - 4px", "100% - 4px" ]
              }
            },
            {
              "stack_panel": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 2,
                "size": [ "100% - 8px", "100% - 8px" ],
                "controls": [
                  {
                    "vertical_0": {
                      "type": "stack_panel",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "size": [ "fill", "100%" ],
                      "controls": [
                        { "main_content@main_content_panel": {} },
                        { "padding": {
                            "type": "panel",
                            "size": [ 0, 2 ]
                        } },
                        { "navigation@navigation_panel": {} }
                      ]
                    }
                  },
                  { "padding": {
                      "type": "panel",
                      "size": [ 2, 0 ]
                  } },
                  {
                    "vertical_1": {
                      "type": "stack_panel",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "size": [ 128, "100%" ],
                      "controls": [
                        { "new_world@create_new_world": {} },
                        { "new_realm@create_new_realm": {} },
                        { "quick_play@quick_play": {} },
                        { "import_world@import_world": {} }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "play_screen_content": {
    "controls": [
      { "main_stack@main_stack_panel": {} },
      { "editor_text@editor_text_panel": {
          "visible": "$is_editor_mode_enabled"
      } },
      {
        "popup_dialog_factory": {
          "type": "factory",
          "control_ids": {
            "join_by_code": "@play.popup_dialog_join_by_code",
            "high_ping_warning": "@play.popup_dialog_high_ping"
          }
        }
      }
    ]
  },

  // Popup Dialog Join By Code //

  "popup_dialog_join_by_code": {
    "controls": [
      { "bg@popup_dialog.black_tint_image": {
          "alpha": 0.7
      } },
      { "popup_dialog@common_dialogs.main_panel_one_button": {
          "$close_button_to_button_id": "button.menu_network_join_by_code_close",
          "$text_name": "networkWorld.joinByCode",
          "$child_control": "play.popup_dialog_join_by_code_content",
          "$button_panel": "popup_dialog.single_button_panel",
          "$button_text": "networkWorld.join",
          "$popup_dialog_middle_button_name": "button.menu_network_join_by_code_popup_join",
          "layer": 1,
          "size": [ 212, 128 ]
      } }
    ]
  },

  "popup_dialog_join_by_code_content": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ "100% - 4px", "100% - 4px" ],
    "controls": [
      { "padding_0": {
          "type": "panel",
          "size": [ 0, 4 ]
      } },
      { "text_box@join_by_code_popup_code_text_field": {
          "size": [ "100%", 16 ]
      } },
      { "text_0": {
          "type": "panel",
          "size": [ "100%", "100%c + 16px" ],
          "controls": [
            { "text": {
              "type": "label",
              "text": "networkWold.joinByCodeHelpText",
              "layer": 3,
              "shadow": true,
              "color": [ 0.8, 0.8, 0.8 ],
              "size": [ "100% - 4px", "default" ],
              "offset": [ 2, 24 ]
            } }
          ]
      } }
    ]
  },

  // Popup Dialog High Ping //

  "popup_dialog_high_ping": {
    "controls": [
      { "bg@common_assets.modal_background": {} },
      { "high_ping_popup_content@play.popup_dialog_high_ping_content": {
          "layer": 1
      } }
    ]
  },

  "popup_dialog_high_ping_content": {
    "type": "panel",
    "size": [ 228, 168 ],
    "controls": [
      {
        "background": {
          "type": "image",
          "texture": "textures/ui/hud_tip_text_background",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 1,
          "alpha": 0.4
        }
      },
      {
        "stack_panel": {
          "type": "stack_panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "100% - 4px", "100% - 4px" ],
          "controls": [
            {
              "ping_images": {
                "type": "panel",
                "size": [ "100%", 48 ],
                "controls": [
                  { "medium_connection": {
                      "type": "image",
                      "texture": "textures/ui/hud_tip_text_background",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "layer": 2,
                      "alpha": 0.4,
                      "size": [ 36, 36 ],
                      "offset": [ -32, 0 ],
                      "controls": [
                        { "image": {
                            "type": "image",
                            "texture": "textures/ui/Ping_Yellow_Dark",
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "layer": 4,
                            "size": [ 32, 32 ]
                        } }
                      ]
                  } },
                  { "low_connection": {
                      "type": "image",
                      "texture": "textures/ui/hud_tip_text_background",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "layer": 2,
                      "alpha": 0.4,
                      "size": [ 36, 36 ],
                      "offset": [ 32, 0 ],
                      "controls": [
                        { "image": {
                            "type": "image",
                            "texture": "textures/ui/Ping_Red_Dark",
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "layer": 4,
                            "size": [ 32, 32 ]
                        } }
                      ]
                  } }
                ]
              }
            },
            { "padding_0": {
                "type": "panel",
                "size": [ 0, 12 ]
            } },
            { "text_0": {
                "type": "panel",
                "size": [ "100%", "100%c" ],
                "controls": [
                  { "text": {
                    "type": "label",
                    "text": "networkWorld.highPingWarning.line1",
                    "layer": 3,
                    "shadow": true,
                    "size": [ "100% - 4px", "default" ],
                    "offset": [ 2, 0 ]
                  } }
                ]
            } },
            { "padding_1": {
                "type": "panel",
                "size": [ 0, 8 ]
            } },
            { "text_1": {
                "type": "panel",
                "size": [ "100%", "100%c" ],
                "controls": [
                  { "text": {
                    "type": "label",
                    "text": "networkWorld.highPingWarning.line2",
                    "layer": 3,
                    "shadow": true,
                    "size": [ "100% - 4px", "default" ],
                    "offset": [ 2, 0 ]
                  } }
                ]
            } },
            { "padding_3": {
                "type": "panel",
                "size": [ 0, "fill" ]
            } },
            { "horizontal": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": [ "100%", 28 ],
                "controls": [
                  { "join@high_ping_join_modal_button": {
                      "size": [ "50%", "100%" ]
                  } },
                  { "cancel@high_ping_cancel_modal_button": {
                      "size": [ "fill", "100%" ]
                  } }
                ]
            } }
          ]
        }
      }
    ]
  },

  "high_ping_join_modal_button@common_buttons.border_text_button": {
    "$button_text": "networkWorld.join",
    "$pressed_button_name": "button.join_server_anyway",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "focused"
      }
    ]
  },

  "high_ping_cancel_modal_button@common_buttons.border_text_button": {
    "$button_text": "gui.cancel",
    "$pressed_button_name": "button.cancel_join_server",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "$pressed_button_name",
        "mapping_type": "focused"
      }
    ]
  }
}