{
  "namespace": "crafting",

  "background_image": {
    "type": "image",
    "texture": "textures/ui/modal/modal_background",
    "layer": 1,
    "controls": [
      {
        "content_ui": {
          "type": "image",
          "texture": "textures/ui/modal/modal_header",
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 2,
          "size": [ "100% - 2px", "100% - 2px" ]
        }
      }
    ]
  },

  "toolbar_background": {
    "texture": "textures/ui/modal/modal_header"
  },

  "toolbar_panel/toolbar_background/toolbar_stack_panel/padding_0": {
    "size": [ 4, 0 ]
  },

  "toolbar_panel/toolbar_background/toolbar_stack_panel/padding_4": {
    "size": [ 4, 0 ]
  },

  "tab_navigation_panel_layout": {
    "size": [ "100%", 26 ]
  },

  "tab_navigation_panel_layout/navigation_tabs/content": {
    "offset": [ 0, -2 ]
  },

  "tab_panel": {
    "type": "panel",
    "controls": [
      {
        "tab_image": {
          "type": "image",
          "texture": "textures/ui/modal/modal_background",
          "size": [ "100%", "100%" ]
        }
      },
      {
        "tab_content_sizer": {
          "type": "image",
          "texture": "textures/ui/modal/modal_header",
          "size": [ "100% - 2px", "100% - 0.8px" ],
          "offset": [ 0, 1 ],
          "controls": [
            {
              "tab_content@$tab_content": {
                "layer": 4
              }
            }
          ]
        }
      }
    ]
  },

  "top_tab": {
    "$tab_panel": "crafting.tab_panel",
    "size": [ 25, 24 ]
  },

  "scroll_panel": {
    "$show_background": false
  },

  "creative_label": {
    "color": "$main_header_text_color"
  },

  "crafting_label": {
    "color": "$main_header_text_color"
  },

  "inventory_label": {
    "color": "$main_header_text_color"
  },

  "player_inventory": {
    "modifications": [
      {
        "control_name": "common_panel",
        "operation": "replace",
        "value": [
          {
            "background_image@crafting.background_image": {}
          }
        ]
      }
    ]
  },

  "creative_hotbar_stack": {
    "modifications": [
      {
        "control_name": "creative_hotbar_background"
      }
    ]
  },

  "recipe_book": {
    "modifications": [
      {
        "control_name": "bg",
        "operation": "replace",
        "value": [
          {
            "background_image@crafting.background_image": {}
          }
        ]
      }
    ]
  },

  "crafting_screen": {
    "$screen_background_alpha": 0.4
  },

  "inventory_screen": {
    "$screen_background_alpha": 0.4
  }
}